{
  "name": "youtube-downloader",
  "version": "1.0.0",
  "description": "A simple YouTube video downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win --config.win.target=portable",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["youtube", "downloader", "video"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.yourname.youtube-downloader",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/@distube/**/*",
      "node_modules/sax/**/*",
      "node_modules/miniget/**/*",
      "node_modules/m3u8stream/**/*",
      "node_modules/undici/**/*",
      "node_modules/https-proxy-agent/**/*",
      "node_modules/debug/**/*",
      "node_modules/agent-base/**/*",
      "node_modules/ms/**/*",
      "node_modules/http-cookie-agent/**/*",
      "node_modules/tough-cookie/**/*",
      "node_modules/universalify/**/*",
      "node_modules/url-parse/**/*",
      "node_modules/querystringify/**/*",
      "node_modules/requires-port/**/*",
      "node_modules/punycode/**/*",
      "node_modules/psl/**/*",
      "node_modules/tldts/**/*",
      "node_modules/tldts-core/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}